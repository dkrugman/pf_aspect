[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info
ignore =
    E501,  # line too long
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused
    F403   # wildcard import
per-file-ignores =
    __init__.py:F401
    tests/*:E501
max-complexity = 10
